@model List<GH.EventManagement.Entities.Models.EventParticipant>

@if (Model != null && Model.Any())
{
    <ul class="list-group">
        @foreach (var eventParticipant in Model)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@eventParticipant.Participant.FirstName @eventParticipant.Participant.LastName</strong>
                        <div class="small text-muted">@eventParticipant.Participant.Email</div>
                    </div>
                    <!-- Badge kısmı istenirse bilgi eklenebilir -->
                    <span class="badge bg-success"></span>
                </div>
            </li>
        }
    </ul>
}
else
{
    <div class="alert alert-info">Bu etkinlik için henüz katılımcı eklenmemiş.</div>
}
