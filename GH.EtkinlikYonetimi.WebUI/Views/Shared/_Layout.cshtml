<!DOCTYPE html>
<html lang="tr">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>@ViewData["Title"] - GH Event Management</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

	<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="~/css/aos.css" />
	@* Addtional CSS *@

</head>
<body>

	<!-- Header -->
	@* <site-header></site-header> *@

	@Html.Partial("~/Views/Shared/Partials/_Header.cshtml")
	@Html.Partial("~/Views/Shared/Partials/_Loader.cshtml")

	<!-- Content -->
	<main style="padding-top: 9rem;">
		<div class="container-fluid px-0">
			@Html.Partial("~/Views/Shared/Partials/_PageHeader.cshtml")
			<partial name="~/Views/Shared/Partials/_ToastDataMessages.cshtml" />
		</div>
		<div class="container fade-in" style="padding-top: 1rem;">

			@RenderBody()
		</div>


	</main>


	<!-- Footer -->
	<footer class="text-center text-muted mt-5 mb-3">
		<small>&copy; @DateTime.Now.Year - Güvence Hesabı Etkinlik Yönetimi</small>
	</footer> 

	<!-- Scripts -->
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	<script src="~/js/header.js"></script>
	<script src="~/js/site.js"></script>
	<script>
			   $(document).ready(function() {
			$(".container").fadeIn(4000); // 1000ms süresince animasyon ile görünür yap

		});

		//////////////////////
		// Başarı mesajını 2 saniye sonra yavaşça kaybet
		setTimeout(function () {
			const alert = document.getElementById('success-alert');
			if (alert) {
				alert.classList.remove('show');
				alert.classList.add('fade');
				alert.style.transition = 'opacity 0.5s ease-out';
				alert.style.opacity = 0;

				// DOM'dan tamamen kaldır
				setTimeout(() => alert.remove(), 500);
			}
		}, 2000);
	</script>
	@RenderSection("Scripts", required: false)
</body>
</html>
