@model ParticipantCreateViewModel

@{
	ViewData["Title"] = "Katılımcı Ekle";
	ViewBag.PageTitle = "Katılımcı Ekle";
}

<div class="row my-3">
	<div class="col-md-6">
		<form class="partnership-form" asp-action="Create" method="post">
			<h2 class="partnership-form-title aos-init aos-animate" data-aos="fade-up" data-aos-delay="150">.:: Katılımcı Bilgileri</h2>
			<div class="mb-3">
				<label class="form-label">Ad Soyad (<span style="color:red">*</span>)</label>
				<div class="row">
					<div class="col-md-6">
						<input asp-for="FirstName" class="form-control" placeholder="Ad" />
						<span asp-validation-for="FirstName" class="text-danger"></span>
					</div>
					<div class="col-md-6">
						<input asp-for="LastName" class="form-control" placeholder="Soyad" />
						<span asp-validation-for="LastName" class="text-danger"></span>
					</div>
				</div>
			</div>

			<div class="mb-3">
				<label asp-for="Email" class="form-label"></label> (<span style="color:red">*</span>)
				<input asp-for="Email" class="form-control" placeholder="Email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="form-check mb-3 d-none">
				<input asp-for="IsAttending" class="form-check-input" />
				<label asp-for="IsAttending" class="form-check-label"></label>
			</div>

			<button type="submit" class="btn btn-primary">Kaydet</button>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script>
		$(document).ready(function () {
			setTimeout(function () {
				$('.alert-success').fadeOut('slow');
			}, 3000);
		});
	</script>
}
